<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:background="@color/deepblue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Together Kongju!"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/kongju_icon"
                android:drawablePadding="0.5dp">
            </TextView>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingBottom="30dp"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="SIGN UP"
            android:textSize="40dp"
            android:gravity="center"
            android:background="@drawable/radiustv">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="학번"
                android:gravity="center"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="7dp"
                android:background="@drawable/radiustv">

            </TextView>

            <EditText
                android:id="@+id/id"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/radiustv">
            </EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/checkID"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Check"
                android:layout_marginLeft="7dp"
                android:textColor="@color/white"
                android:background="@drawable/designbtn">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Password"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:background="@drawable/radiustv">
            </TextView>
            <EditText
                android:id="@+id/pass"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/radiustv"
                android:inputType="textPassword">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="이름"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:background="@drawable/radiustv">
            </TextView>
            <EditText
                android:id="@+id/name"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/radiustv">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="닉네임"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:background="@drawable/radiustv">
            </TextView>
            <EditText
                android:id="@+id/nickname"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/radiustv">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="번호"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:background="@drawable/radiustv">
            </TextView>
            <EditText
                android:id="@+id/phone"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/radiustv">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="E-mail"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:background="@drawable/radiustv">
            </TextView>
            <EditText
                android:id="@+id/email"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/radiustv"
                android:hint="/@smail.kongju.ac.kr">
            </EditText>
            <!--
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sendEmail"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Send"
                android:layout_marginLeft="7dp"
                android:textColor="@color/white"
                android:background="@drawable/designbtn">
            </androidx.appcompat.widget.AppCompatButton>
            -->
        </LinearLayout>

